@model com.itransition.final.ViewModels.Account.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
        crossorigin="anonymous"/>
    <link
        rel="stylesheet"
        href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css"/>
    <link rel="stylesheet" href="~/css/divider.css"/>
    <title>Register</title>
</head>
<body>
<div class="container-lg mt-5">
    <div class="row justify-content-center">
        <div class="col-10 col-sm-8 col-md-7 col-lg-6 border p-3 rounded border-2">
            <h5 class="text-center mt-1 mb-4 fw-bold text-muted">
                NEW ACCOUNT
            </h5>
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <div class="form-floating">
                            <input
                                asp-for="FirstName"
                                class="form-control"
                                required/>
                            <label asp-for="FirstName">
                                <i
                                    class="fi fi-rr-portrait me-1"
                                    style="vertical-align: middle">
                                </i
                                >First Name
                            </label>
                            <span class="text-danger " asp-validation-for="FirstName"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <div class="form-floating">
                            <input
                                asp-for="LastName"
                                class="form-control"
                                required/>
                            <label asp-for="LastName">
                                <i
                                    class="fi fi-rr-portrait me-1"
                                    style="vertical-align: middle">
                                </i
                                >Last Name
                            </label>
                            <span class="text-danger " asp-validation-for="LastName"></span>
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input
                        asp-for="Email"
                        class="form-control"
                        required/>
                    <label asp-for="Email">
                        <i
                            class="fi fi-rr-envelope me-1"
                            style="vertical-align: middle">
                        </i>
                        Email
                    </label>
                    <span class="text-danger " asp-validation-for="Email"></span>
                </div>

                <div class="form-floating mb-3">
                    <input
                        asp-for="Password"
                        class="form-control"
                        required/>
                    <label asp-for="Password">
                        <i
                            class="fi fi-rr-lock me-1"
                            style="vertical-align: middle">
                        </i
                        >Password
                    </label>
                    <span class="text-danger " asp-validation-for="Password"></span>
                </div>
                <div class="form-floating mb-3">
                    <input
                        asp-for="PasswordConfirm"
                        class="form-control"
                        required/>
                    <label asp-for="PasswordConfirm">
                        <i
                            class="fi fi-rr-shield-check me-1"
                            style="vertical-align: middle">
                        </i
                        >Confirm Password
                    </label>
                    <span class="text-danger " asp-validation-for="PasswordConfirm"></span>
                </div>
                <button
                    type="submit"
                    class="btn btn-outline-success w-100 mb-3 fw-bold">
                    Submit
                </button>
            </form>
            <div class="text-center mb-3">
                Are you already have an account?
                <p>
                    <a class="text-info" href="@Url.Action("Login", "Account")">Please, sign in!</a>
                </p>
            </div>
        </div>
    </div>
</div>
</body>
</html>