@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Home</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
        crossorigin="anonymous"/>
    <link
        rel="stylesheet"
        href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css"/>
</head>
<body>
<nav class="navbar bg-light">
    <div class="container-lg mx-auto">
        <div class="col-2 col-lg-1">
            <a class="navbar-brand" href="home.html">HM</a>
        </div>
        <div class="col-8 col-lg-9 text-start">
            <div class="d-flex">

            </div>
        </div>
        <div class="col-2 col-lg-1 text-end">
            @if (!User.Identity!.IsAuthenticated)
            {
                <a class="btn btn-outline-secondary" href="@Url.Action("Login", "Account")">
                    <i class="fi fi-rr-user-add me-1" style="vertical-align: middle;"></i>
                </a>
            }
            @if (User.Identity!.IsAuthenticated)
            {
                <div class="btn-group dropstart">
                    <button
                        class="btn rounded-circle btn-outline-dark opacity-75"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <span class="text-uppercase"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <h5 class="dropdown-header">
                                Hello, @User.Identity.Name
                            </h5>
                        </li>
                        <li>
                            <hr class="dropdown-divider"/>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action()">
                                <i
                                    class="fi fi-rr-portrait me-1"
                                    style="vertical-align: middle">
                                </i>
                                Profile
                            </a
                            >
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action()">
                                <i
                                    class="fi fi-rr-business-time me-1"
                                    style="vertical-align: middle">
                                </i>
                                Admin panel
                            </a
                            >
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action()">
                                <i
                                    class="fi fi-rr-eye me-1"
                                    style="vertical-align: middle">
                                </i>
                                My Reviews
                            </a
                            >
                        </li>
                        <li>
                            <hr class="dropdown-divider"/>
                        </li>
                        <li>
                            <div class="dropdown-item">
                                <div class="form-check form-switch">
                                    <form asp-action="" asp-controller="Account" method="post">
                                        <input
                                            class="form-check-input"
                                            type="checkbox"
                                            role="switch"
                                            id="lang"
                                            onchange="this.form.submit();"/>
                                        <label for="lang">English/Russian</label>
                                    </form>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="dropdown-item">
                                <div class="form-check form-switch">
                                    <form method="" action="">
                                        <input
                                            class="form-check-input"
                                            type="checkbox"
                                            role="switch"
                                            id="theme"
                                            onchange="this.form.submit();"/>
                                        <label for="theme">Dark/Light</label>
                                    </form>
                                </div>
                            </div>
                        </li>
                        <li>
                            <hr class="dropdown-divider"/>
                        </li>
                        <li>
                            <form method="post" asp-action="Logout" asp-controller="Account">
                                <button class="btn border-0" type="submit">
                                    <i
                                        class="fi fi-rr-power me-1"
                                        style="vertical-align: middle">
                                    </i>
                                    <span>Sign out</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }

        </div>
    </div>
</nav>
<div class="container-lg mt-3 px-4">
<div class="row mb-3">
    <div class="col-4 col-sm-6">
        <button
            type="button"
            class="btn btn-light"
            data-bs-toggle="modal"
            data-bs-target="#filterModal">
            <i class="fi fi-rr-settings-sliders"></i>
        </button>
        <div
            class="modal fade"
            id="filterModal"
            tabindex="-1"
            aria-hidden="true"
            aria-labelledby="filter">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form method="" action="">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">
                                <i class="fi fi-rr-settings-sliders"></i>
                            </h1>
                            <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close">
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row mb-3 pb-2 px-2">
                                <label class="form-label fw-bold p-0 ps-1" for="category">
                                    Category :
                                </label>
                                <select class="form-select" id="category">
                                    <option value="none" selected></option>
                                    <option value="films">Films</option>
                                    <option value="books">Books</option>
                                    <option value="games">Games</option>
                                    <option value="serials">Serials</option>
                                    <option value="channel">YouTube Channels</option>
                                </select>
                            </div>
                            <div class="row mb-3 pb-2 px-2">
                                <label class="form-label fw-bold p-0 ps-1" for="sort">
                                    Sort by :
                                </label>
                                <select class="form-select" id="sort">
                                    <option value="none" selected></option>
                                    <option value="rate">Rate</option>
                                    <option value="likes">Likes</option>
                                    <option value="date">Date</option>
                                </select>
                            </div>
                            <div class="row pb-2 px-2 w-50">
                                <label
                                    class="form-label fw-bold p-0 ps-1"
                                    for="flexRadioDefault1">
                                    Order by :
                                </label>

                                <div class="col-6">
                                    <div class="form-check align-self-center ms-2">
                                        <input
                                            class="form-check-input"
                                            type="radio"
                                            name="flexRadioDefault"
                                            id="flexRadioDefault1"/>
                                        <label
                                            class="form-check-label"
                                            for="flexRadioDefault1">
                                            Asc
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check align-self-center ms-2">
                                        <input
                                            class="form-check-input"
                                            type="radio"
                                            name="flexRadioDefault"
                                            id="flexRadioDefault1"/>
                                        <label
                                            class="form-check-label"
                                            for="flexRadioDefault1">
                                            Desc
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-light" type="submit">Show</button>
                            <button class="btn btn-light" type="reset">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-8 col-sm-6">
        <form class="d-flex me-2 w-100" role="search" method="" action="">
            <input
                id="searchInput"
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
                required/>
            <button class="btn btn-outline-success" type="submit">
                <i class="fi fi-rr-search"></i>
            </button>
        </form>
    </div>
</div>
<div class="row mb-3">
    <div class="col-md-4 col-sm-6 col-lg-3 mb-3">
        <div class="card">
            <img
                src=""
                class="card-img-top"
                alt=""/>
            <div class="card-body">
                <div class="row">
                    <div class="col-8 text-start">
                        <h4 class="card-title">Harry Potter</h4>
                    </div>
                    <div class="col-4 text-end">
                        <form method="" action="">
                            <button type="submit" class="btn border-0">
                                <i class="fi fi-rr-heart"></i>
                            </button>
                        </form>
                    </div>
                </div>
                <span class="card-text">Books</span>
                <br/>
                <span class="card-text">dimasidorenko53@gmail.com</span>
                <br/>
                <span class="card-text">20.12.2022</span>
            </div>
            <div class="card-footer text-end">
                <div class="row">
                    <div class="col-8 text-start align-self-center">
                        <form method="" action="">
                            <button
                                class="btn border-0"
                                type="submit"
                                name="rate"
                                value="1"
                                style="--bs-btn-padding-y: 0; --bs-btn-padding-x: 0">
                                <i
                                    class="fi fi-rr-star"
                                    style="vertical-align: middle">
                                </i>
                            </button>
                            <button
                                class="btn border-0"
                                type="submit"
                                name="rate"
                                value="2"
                                style="--bs-btn-padding-y: 0; --bs-btn-padding-x: 0">
                                <i
                                    class="fi fi-rr-star"
                                    style="vertical-align: middle">
                                </i>
                            </button>
                            <button
                                class="btn border-0"
                                type="submit"
                                name="rate"
                                value="3"
                                style="--bs-btn-padding-y: 0; --bs-btn-padding-x: 0">
                                <i
                                    class="fi fi-rr-star"
                                    style="vertical-align: middle">
                                </i>
                            </button>
                            <button
                                class="btn border-0"
                                type="submit"
                                name="rate"
                                value="4"
                                style="--bs-btn-padding-y: 0; --bs-btn-padding-x: 0">
                                <i
                                    class="fi fi-rr-star"
                                    style="vertical-align: middle">
                                </i>
                            </button>
                            <button
                                class="btn border-0"
                                type="submit"
                                name="rate"
                                value="5"
                                style="--bs-btn-padding-y: 0; --bs-btn-padding-x: 0">
                                <i
                                    class="fi fi-rr-star"
                                    style="vertical-align: middle">
                                </i>
                            </button>
                        </form>
                    </div>
                    <div class="col-4 text-end">
                        <a class="btn border-0" href="review.html">
                            <i class="fi fi-rr-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3">
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link text-dark">
                    <i class="fi fi-rr-angle-left">
                    </i
                    >
                </a>
            </li>
            <li class="page-item">
                <a class="page-link text-dark" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link text-dark" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link text-dark" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link text-dark" href="#">
                    <i class="fi fi-rr-angle-right">
                    </i
                    >
                </a>
            </li>
        </ul>
    </nav>
</div>
</div>
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>
</html>